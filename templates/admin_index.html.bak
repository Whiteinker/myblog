{% extends 'base.html' %}

{% block base %}
{% load tags %}
<div id="title" style="width: 100%;height: 100px;background-color:#8c8c8c;">
		<div style="margin: 0 auto;width: 400px;height: 100px;">
				<div style=";float: left;margin-top: 30px">
				<p style="font-size: xx-large">墨白</p>
				</div>
				<div style="float: left">
						<p style="float: left; border:1px;font-size: 18px;margin-left:10px;margin-top: 60px">——墨沉满纸一笑若白</p>
				</div>
		</div>

</div>

		{#登录div#}
<div style="height: 36px;width: 40px;position: relative;left: 1100px;top: -55px">
		<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Menu
    <span class="caret"></span>
  </button>
				<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">

						{% if userinfo %}		<li><a href="{% url "logout" %}" onclick="addnext(this)">注销</a></li>
						{% else %} 	<li><a href="{% url "login" %}" onclick="addnext(this)">登录</a></li>
						{% endif %}
						<li role="separator" class="divider"></li>
                        <li><a href="/lc/">管理员主页</a></li>
						<li><a href="/">用户界面</a></li>

						<li role="separator" class="divider"></li>
				</ul>
</div>
</div>

<div style="height: auto;width: 1000px;margin: 0 auto">
{% block admin_index %}


<table class="table table-condensed ">
{% for table in display_table %}

<tr>
		<td><a href="{% url 'lc' %}{{ table }}">{{ table }}</a></td>
</tr>
{% endfor %}
</table>

{% endblock %}
</div>


<script>

{#获取当前页面url 添加至登录或注销页面的next中#}
function addnext(obj) {
	var next = window.location.pathname;
	logi_o = $(obj).attr('href')
	$(obj).attr('href',logi_o+'?next='+next)
}
</script>
{% endblock %}
